@model IEnumerable<Report.Models.db_data>;

@{
    ViewData["Title"] = "لیست تولید دستگاه";
}

<div class="direction-rtl">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">

                <div class="col-md-12">
                    <div class="table-responsive table--no-card m-b-30">
                        <table class="table table-borderless table-data3 table-striped text-center">
                            <thead>
                                <tr>
                                    <th>ردیف</th>
                                    <th>@Html.DisplayNameFor(model => model.tar_f)</th>
                                    <th>@Html.DisplayNameFor(model => model.dev_name)</th>
                                    <th>@Html.DisplayNameFor(model => model.tedad)</th>
                                    <th>@Html.DisplayNameFor(model => model.tedad_scrap)</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ int Index = 1;}
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <label>@Index</label>
                                        </td>
                                        <td>
                                            <label>@item.tar_f</label>
                                        </td>
                                        <td>
                                            <label>@item.devices.dev_name</label>
                                        </td>                                        
                                        <td>
                                            <label>@item.tedad</label>
                                        </td>
                                        <td>
                                            <label>@item.tedad_scrap</label>
                                        </td>
                                    </tr>
                                    Index++;
                                }
                            </tbody>
                        </table>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>

