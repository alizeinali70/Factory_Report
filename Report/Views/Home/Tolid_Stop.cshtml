@model IEnumerable<Report.Models.db_data>;
@{
    ViewData["Title"] = "آمار توقف دستگاه";
}

<link href="~/cal/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="~/cal/bootstrap-theme.min.css" />
<link rel="stylesheet" href="~/cal/MdBootstrapPersianDateTimePicker/jquery.Bootstrap-PersianDateTimePicker.css" />
<script src="~/cal/jquery-2.1.4.js"></script>
<script src="~/cal/bootstrap.min.js"></script>


<style type="text/css">
    body, table {
        font-family: 'Segoe UI', Tahoma;
        font-size: 14px;
    }
</style>

<div class="direction-rtl">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">

                <div class="col-md-12">
                    <div class="col-md-12 pull-right">
                        <form action="/Home/Search_Tolid_Stop" method="post">
                            <div class="form-group">
                                <div class="col-md-4 pull-right">
                                    <div class="input-group-addon" data-mddatetimepicker="true" data-trigger="click" data-targetselector="#fromDate1" data-groupid="group1" data-fromdate="true" data-enabletimepicker="false" data-placement="center">
                                        <span class="fa fa-calendar text-warning"></span>
                                    </div>
                                    <input type="text" class="form-control" name="from" id="fromDate1" placeholder="از تاریخ" data-mddatetimepicker="true" data-trigger="click" data-targetselector="#fromDate1" data-groupid="group1" data-fromdate="true" data-enabletimepicker="false" data-placement="center" />
                                </div>

                                <div class="col-md-4 pull-right">
                                    <div class="input-group-addon" data-mddatetimepicker="true" data-trigger="click" data-targetselector="#toDate1" data-groupid="group1" data-todate="true" data-enabletimepicker="false" data-placement="center">
                                        <span class="fa fa-calendar text-warning"></span>
                                    </div>
                                    <input type="text" class="form-control" name="to" id="toDate1" placeholder="تا تاریخ" data-mddatetimepicker="true" data-trigger="click" data-targetselector="#toDate1" data-groupid="group1" data-todate="true" data-enabletimepicker="false" data-placement="center" />
                                </div>
                            </div>
                            <div class="col-md-2 pull-right">
                                <button class="btn btn-block btn-success">جستجو</button>
                            </div>
                            <div class="col-md-2 pull-right"></div>

                        </form>
                    </div>
                    <div class="col-md-12 pull-right"></div>
                    <div class="table-responsive table--no-card m-b-30">
                        <table class="table table-borderless table-data3 table-striped text-center">
                            <thead>
                                <tr>
                                    <th>ردیف</th>
                                    <th>@Html.DisplayNameFor(model => model.tar_f)</th>
                                    <th>@Html.DisplayNameFor(model => model.dev_name)</th>
                                    <th>@Html.DisplayNameFor(model => model.time_sleep)</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ int Index = 1;}
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <label>@Index</label>
                                        </td>
                                        <td>
                                            <label>@item.tar_f</label>
                                        </td>
                                        <td>
                                            <label>@item.devices.dev_name</label>
                                        </td>
                                        <td>
                                            <label>@item.time_sleep</label>
                                        </td>
                                    </tr>
                                    Index++;
                                }
                            </tbody>
                        </table>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>


<script src="~/cal/MdBootstrapPersianDateTimePicker/calendar.js" type="text/javascript"></script>
<script src="~/cal/MdBootstrapPersianDateTimePicker/jquery.Bootstrap-PersianDateTimePicker.js" type="text/javascript"></script>