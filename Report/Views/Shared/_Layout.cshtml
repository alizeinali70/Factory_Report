                                                    <div class="account-dropdown__item">
                                                        <a href="#">
                                                            <i class="zmdi zmdi-account"></i>Account
                                                        </a>
                                                    </div>
                                                    <div class="account-dropdown__item">
                                                        <a href="#">
                                                            <i class="zmdi zmdi-settings"></i>Setting
                                                        </a>
                                                    </div>
                                                    <div class="account-dropdown__item">
                                                        <a href="#">
                                                            <i class="zmdi zmdi-money-box"></i>Billing
                                                        </a>
                                                    </div>
                                                </div>*@
                                                <div class="account-dropdown__footer">
                                                    <a asp-action="Log_Out" asp-controller="Home">
                                                        <i class="zmdi zmdi-power"></i>خروج
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
            <!-- HEADER DESKTOP-->
            <!-- END PAGE CONTAINER-->
        </div>
        <div class="col-lg-12 col-sm-12">
            <div class="row m-t-100 direction-rtl">
                <div class="col-sm-4 col-lg-1">
                    @*<a class="col-sm-12 col-lg-12" href="#">
                <div class="overview-item overview-item--c1">
                    <div class="overview__inner">
                        <div class="overview-box clearfix text-center">
                            <div class="icon">
                                <img src="~/img/Chart.png" alt="Alternate Text" height="60" width="60" />
                            </div>
                            <div class="text">
                                <h5>نمودار تولید</h5>
                                <span></span>
                            </div>
                        </div>
                    </div>
                </div>
