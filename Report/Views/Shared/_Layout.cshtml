                <div class="col-sm-4 col-lg-2">
                    <a class="col-sm-12 col-lg-12" asp-action="Tolid_Device">
                        <div class="overview-item overview-item--c4">
                            <div class="overview__inner">
                                <div class="overview-box clearfix text-center">
                                    <div class="icon">
                                        <img src="~/img/1329377577_gnome-mime-application-vnd.lotus-1-2-3.png" alt="Alternate Text" height="60" width="60" />

